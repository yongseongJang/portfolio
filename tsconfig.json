{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "removeComments": true,
      "jsx": "react",
      "skipLibCheck": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }